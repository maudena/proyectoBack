<div class="container text-center mt-3" style="width: 500px; display:flex; flex-direction:row">
    <div style="background-color: green;color: white; height: 50px; width: 350px; border-radius:2%">
        <h2><i>Bienvenido {{datos.username}}</i></h2>
        <br />
    </div>
    <div class="ml-2" style="align-self: center;">
        <button class="btn btn-danger" onclick="location.href='/logout'">LOGOUT</button>
    </div>
</div>
<div class="container my-5" style="height: 200px; width: 500px">
    <form id="addItem" method="post">
        <div class="mb-3">
            <label for="title" class="form-label">Producto</label>
            <input type="text" class="form-control" id="title" name="title" />
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Precio</label>
            <input type="text" class="form-control" id="price" name="price" />
        </div>
        <div class="mb-3">
            <label for="stock" class="form-label">Cantidad</label>
            <input type="text" class="form-control" id="stock" name="stock" />
        </div>

        <button id="btnSave" type="submit" class="btn btn-primary">Guardar</button>
    </form>
</div>
</br>

<table class="table mt-5">
    <thead>
        <th scope="col">Producto</th>
        <th scope="col">Precio</th>
        <th scope="col">Cantidad</th>
    </thead>
    <tbody>

        {{#if productos.length}}
            {{#each productos}}
            <tr>
                <td>{{title}}</td>
                <td>{{price}}</td>
                <td>{{stock}}</td>
            </tr>      
            {{/each}}
        {{else}}
        <tr>
            <td colspan="3">No hay datos</td>
        </tr>
        {{/if}}

    </tbody>
</table>
<br>
