<div class="container-fluid mt-5 ">
  {{#if carrito.length}}
  <div class="row justify-content-center">
    <div class="col-sm-6 col-md-4 col-md-offset-3 col-sm-offset-3">
      <ul class="list-group">
        {{#each carrito}}
        <li class="list-group-item">
          <span class="badge bg-dark text-light">{{this.amount}}</span>
          <strong>{{item.title}}</strong>
          <span class="label">${{item.price}}</span>
          <div class="btn-group">
            <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-bs-toggle="dropdown">Action <span
                class="caret"></span></button>
            <ul class="dropdown-menu">
              <li><a href="">Reduce 1</a></li>
              <li><a href="">Remover todo</a></li>
            </ul>
          </div>
        </li>
        {{/each}}

      </ul>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-sm-6 col-md-2 col-md-offset-3 col-sm-offset-3">
      <strong>Total: ${{totalPrice}}</strong>
    </div>
  </div>
  <hr>
  <div class="row justify-content-center">
    <div class="col-sm-6 col-md-2 col-md-offset-3 col-sm-offset-3">
      <a href="/carrito" class="btn btn-success" role="button"> Iniciar pedido</a>
    </div>
  </div>

  {{else}}
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <strong>Ups! El carrito está vacío...</strong>
    </div>
  </div>
  {{/if}}


</div>






